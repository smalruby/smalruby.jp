---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>ページ <%= page_number %> ／ <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to '前のページ', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each.with_index do |article, i| %>
  <% if i > 0 %>
  <hr />
  <% end %>
  <h2>
    <span><%= article.date.strftime('%Y年%m月%d日') %></span>
    <br />
    <%= link_to article.title, article %>
  </h2>
  <%= article.summary(250) %>
  <%= link_to '（続きを読む）', article %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to '次のページ', next_page %></p>
  <% end %>
<% end %>
