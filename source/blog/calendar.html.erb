---
pageable: true
---
<h2>古い<%= ruby('記事', 'きじ') %>
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%Y年%m月%d日') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%Y年%m月') %>
  <% when 'year' %>
    <%= year %>年
  <% end %>
</h2>

<% if paginate && num_pages > 1 %>
  <p>ページ <%= page_number %> ／ <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to '前のページ', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %> <span><%= article.date.strftime('%Y年%m月') %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to '次のページ', next_page %></p>
  <% end %>
<% end %>
